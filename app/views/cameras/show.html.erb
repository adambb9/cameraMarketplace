<div class="container mt-2 mb-5">
    <div class="row d-flex justify-content-center">

        <div class="col-md-14">

        <div class="col-md-10">
          <%= link_to 'Create New Booking', new_camera_booking_path(@camera), class: "btn btn-flat"%>

            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> <img id="main-image" src="https://i.etsystatic.com/7788774/r/il/09720e/991738063/il_fullxfull.991738063_sjmh.jpg" width="400" /> </div>
                            <div class="thumbnail text-center"> <img onclick="change_image(this)" src="https://i.etsystatic.com/7788774/r/il/09720e/991738063/il_fullxfull.991738063_sjmh.jpg" width="100"> <img onclick="change_image(this)" src="https://i.etsystatic.com/7788774/r/il/09720e/991738063/il_fullxfull.991738063_sjmh.jpg" width="100"> </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span class="ml-1">Back</span> </div> <i class="fa fa-shopping-cart text-muted"></i>
                            </div>
                            <div class="mt-4 mb-3"> <span class="text-uppercase text-muted brand"><%= @camera.make %></span>
                                <h5 class="text-uppercase"><%= @camera.model %></h5>
                                <%= @camera.category %>
                                <div class="price d-flex flex-row align-items-center"> <span class="act-price">PRICE: <%= @camera.price %> €</span>
                                    <div class="ml-2"> Condition: <%= @camera.condition %> — Year: <%= @camera.year %> </div>
                                </div>
                            </div>
                            <p class="about mt-5">Shop from a wide range of cameras .....</p>
                            <div class="sizes mt-5">

                            <button class="btn btn-dark text-uppercase mr-2 px-4">BUY NOW</button>
                            <%= simple_form_for :search, url: root_path, method: :get do |f| %>
                           <div class="search-form-control form-group">
                          <input class="form-control string required" placeholder="Search for more cameras" type="text" name="search[query]" id="search_query" />
                           <button name="button" type="submit" class="btn btn-dark">
                             <i class="fas fa-search"></i> </button>
                         </div>
                          <% end %> </div>
                        </div>
                        </div>
                          <% if policy(@camera).edit? %>
                            <small class="text-right flex-shrink-0"><%= link_to "Edit camera", edit_camera_path(@camera), class: 'text-danger' %></small>
                          <% end %>
                          <% if policy(@camera).destroy? %>
                            <small class="text-right flex-shrink-0"><%= link_to  "Delete camera", camera_path(@camera), method: :delete, data: { confirm: "Are you sure?" }%></small>
                          <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
