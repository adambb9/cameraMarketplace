<div class="containerForm">
  <h1>Make an Offer</h1>

  <%# New Booking Simpleform inputs %>
  <div class="row">
    <div class="col-6-sm">
      <%= simple_form_for [@camera, @booking] do |f| %>
        <%= f.input :comment, placeholder: 'Add a comment here' %>
        <%= f.input :bid, placeholder: 'Add your price' %>
        <%= f.submit "Send Offer", class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>
