
<div class="warpper">
  <input class="radio" id="one" name="group" type="radio" checked>
  <input class="radio" id="two" name="group" type="radio">
  <input class="radio" id="three" name="group" type="radio">
  <div class="tabs">
  <label class="tab" id="one-tab" for="one">My Watchlist</label>
  <label class="tab" id="two-tab" for="two">Your Offers</label>
  <label class="tab" id="three-tab" for="three">Messages</label>
    </div>
  <div class="panels">

  <div class="panel" id="one-panel">
    <div class="panel-title">My Watchlist</div>


<h1> <% @send_bookings %> </h1>
  <% if @send_bookings.empty? %>
    <h6>You haven't made any offers yet</h6>
    <% else %>
<% @send_bookings.each do |camera| %>
      <div class="col-12 col-sm-4 mb-4">
        <div class="bg-white rounded shadow h-100">
          <img src="https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80", class="camera-img rounded-top">
            <div class="p-3 rounded-bottom d-flex flex-column">
              <strong><%= camera.status %></strong>
              <p><%= camera.comment %></p>
              <div class="d-flex align-items-end justify-content-between pt-4">
                <p>â‚¬<%= camera.bid %></p>
              </div>
              <small class="text-right flex-shrink-0"><%= link_to "See booking", booking_path(camera) %></small>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
   </div>


   <div class="panel" id="two-panel">
  <div class="panel-title">Your Offers</div>

<h1> <%= @recieved_bookings %> </h1>
  <% if @recieved_booking.empty? %>
      <h6>You currently have no offers from customers</h6>
    <% else %>
      <% @recieved_booking.each do |camera| %>
        <div class="col-12 col-sm-4 mb-4">
          <div class="bg-white rounded shadow h-100">
            <img src="https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80", class="camera-img rounded-top">
              <div class="p-3 rounded-bottom d-flex flex-column">
                <strong><%= camera.status %></strong>
                <p><%= camera.comment %></p>
                <div class="d-flex align-items-end justify-content-between pt-4">
                  <p>â‚¬<%= camera.bid %></p>
                </div>
                <small class="text-right flex-shrink-0"><%= link_to "See Offer", booking_path(camera) %></small>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
    </div>
  <div class="panel" id="three-panel">
    <div class="panel-title">Messages</div>
    <p>You currently have no messages.</p>
    </div>
  </div>
</div>
