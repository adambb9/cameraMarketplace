<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-20">
      <div class="col-md-20">
        <div class="cam-card">
          <div class="row">
            <div class="col-md-6">

              <div class="images p-3">
                <% @lense.photos.each do |photo| %>
                  <% if photo == @lense.photos.first %>
                    <div class="text-center p-4">
                      <%= cl_image_tag photo.key, height: 500, width: 600, class: "imageProduct", crop: :fit %>
                    </div>
                  <% end %>
                <% end %>
              </div>

            </div>
          <div class="col-md-6">
            <div class="product">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span class="ml-1"><%= link_to 'Go Back', lenses_path, id:"show-back-link" %></span> </div> <i class="fa fa-shopping-cart text-muted"></i>
                      </div>
                      <div class="infobox">
                        <span class="text-uppercase text-muted brand" id="make"><%= @lense.make %></span>
                        </div>

                       <span class="text-uppercase text-muted brand" id="make"><%= @lense.category %></span>  <span class="text-uppercase text-muted brand" id="make"><%= @lense.lens_type %></span>

                        <div clas= "moreinfo">
                        <span class="act-price">PRICE: <%= @lense.price %> â‚¬</span>
                            <div class="ml-2" id="condition"> Mount type: <%= @lense.lens_mount %></div>
                            <div class="ml-2" id="condition"> Diameter: <%= @lense.diameter %>(mm)</div>
                            <div class="ml-2" id="description"> Condition: <%= @lense.condition %></div>
                            <div class="ml-2" id="seller"> Seller: <%= @lense.user.first_name %></div>
                            <div class="ml-2" id="description"> Description: <%= @lense.description %></div>
                          </div>
                              <div class= "buttons-card">
                            <button class="btn btn-dark text-uppercase mr-2 px-4" ><%=link_to 'Create New Offer', new_lense_booking_path(@lense), id:"show-bid-link"%></button>
                          <% if policy(@lense).edit? %>
                            <small class="text-right flex-shrink-0"><%= link_to "Edit lens", edit_lense_path(@lense), class: "btn btn-dark"  %></small>
                          <% end %>
                          <% if policy(@lense).destroy? %>
                            <small class="text-right flex-shrink-0"><%= link_to  "Delete lens", lense_path(@lense), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></small>
                          <% end %>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
