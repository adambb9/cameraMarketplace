<div class="container mb-5">
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <p class="card-title"><%= @lenses.count %> products</p>
          <h5 class="card-title">Filter By:</h5>
          <div class="d-flex flex-column">
            <div class="mb-2">
              <%= form_tag url_for, method: :get do %>
                <div class="form-check">
                    <%= check_box_tag :with_lenses, true, false, id: "lenses-checkbox", class: "form-check-input" %>
                    <%= label_tag :with_lenses, "Lenses", class: "form-check-label" %>
                </div>

                <div class="form-check">
                  <%= check_box_tag :with_cameras, true, false, id: "cameras-checkbox", class: "form-check-input" %>
                  <%= label_tag :with_cameras, "Cameras", class: "form-check-label" %>
                </div>

                <div class="form-check">
                  <%= check_box_tag :with_accessories, true, false, id: "accessories-checkbox", class: "form-check-input" %>
                  <%= label_tag :with_accessories, "Accessories", class: "form-check-label" %>
                </div>
              <% end %>

              <script type="text/javascript">
                const accessoriesCheckbox = document.getElementById("accessories-checkbox");
                accessoriesCheckbox.checked = window.location.pathname === "<%= accessories_path %>";
                accessoriesCheckbox.addEventListener("change", (event) => {
                  if (event.target.checked) {
                    window.location.href = "<%= accessories_path %>";
                  }
                });

                const camerasCheckbox = document.getElementById("cameras-checkbox");
                camerasCheckbox.checked = window.location.pathname === "<%= cameras_path %>";
                camerasCheckbox.addEventListener("change", (event) => {
                  if (event.target.checked) {
                    window.location.href = "<%= cameras_path %>";
                  }
                });

                const lensesCheckbox = document.getElementById("lenses-checkbox");
                lensesCheckbox.checked = window.location.pathname === "<%= lenses_path %>";
                lensesCheckbox.addEventListener("change", (event) => {
                  if (event.target.checked) {
                    window.location.href = "<%= lenses_path %>";
                  }
                });
              </script>
            </div>
          </div>

          <%# Filter Dropdowns %>
          <h5 class="card-title" style="margin-top:0.9em;">Category:</h5>
            <%= form_tag do %>
            <%= select_tag :category, options_for_select(Lense::CATEGORIES) %>
          <% end %>

          <h5 class="card-title" style="margin-top:0.9em;">Lens Type:</h5>
          <%= form_tag do %>
            <%= select_tag :category, options_for_select(Lense::LENS_TYPES) %>
          <% end %>

          <h5 class="card-title" style="margin-top:0.9em;">Lens Type:</h5>
          <%= form_tag do %>
            <%= select_tag :category, options_for_select(Lense::LENS_MOUNTS) %>
          <% end %>

          <h5 class="card-title" style="margin-top:0.9em;">Lens Diameter(mm):</h5>
          <%= form_tag do %>
            <%= select_tag :category, options_for_select(Lense::DIAMETERS) %>
          <% end %>

          <h5 class="card-title" style="margin-top:0.9em;">Condition:</h5>
          <%= form_tag do %>
            <%= select_tag :category, options_for_select(Lense::CONDITIONS), prompt: 'Select' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-9">

  <div class="d-flex align-items-center justify-content-between column mb-3">
  <%# Page Header %>
    <h3 class="mb-0" >Our Lenses</h3>
    <% if policy(Lense).create? %>
      <%= link_to "Post a new lens", new_lense_path, class: "btn btn-warning" %>
    <% end %>
  </div>
  <%# Product Cards - Styled same as cam - iterate over each lens producing each product card with respective img & info %>
  <div class="row my-2">
      <% @lenses.each do |lense| %>
      <div class="col-12 col-sm-4 mb-4" id="camcards">
        <div class="bg-white rounded shadow h-100">
            <% lense.photos.each do |photo| %>
              <% if lense.photos.empty? %>
                <img src="https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80", class="camera-img rounded-top">
              <% else %>
                <% if photo == lense.photos.first %>
                  <%= cl_image_tag photo.key, class:"camera-img rounded-top" %>
                <% end %>
              <% end %>
            <% end %>
            <div class="p-3 rounded-bottom d-flex flex-column">
              <strong><%= lense.make %> <%= lense.lens_type %></strong>
              <strong><%= lense.lens_mount %></strong> (<%= lense.diameter %>mm)
              <div class="d-flex align-items-end justify-content-between pt-4">
                <p>â‚¬<%= lense.price %>0</p>
                <small class="text-right flex-shrink-0"><%= link_to "View", lense_path(lense), class: 'btn btn-warning' %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
